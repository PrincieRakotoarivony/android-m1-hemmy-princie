<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/comment_popup_bg"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RÃ©sultat"
        android:fontFamily="@font/righteous"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:id="@+id/result"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:text="5/10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/result_to_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/comment_btn_radient"
            android:fontFamily="@font/righteous"
            android:text="Accueil"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/result_to_new_partie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/comment_btn_radient"
            android:fontFamily="@font/righteous"
            android:text="Nouvelle partie"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>