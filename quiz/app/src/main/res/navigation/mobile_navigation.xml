<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_theme"
        android:name="com.quiz.ui.fragments.ThemeFragment"
        android:label="Thème d'étude"
        tools:layout="@layout/fragment_theme" />

    <fragment
        android:id="@+id/nav_ranking"
        android:name="com.quiz.ui.fragments.RankingFragment"
        android:label="Thèmes d'étude"
        tools:layout="@layout/fragment_ranking">
        <action
            android:id="@+id/theme_list_to_details"
            app:destination="@id/nav_theme"
            />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.quiz.ui.fragments.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/home_to_question"
            app:destination="@id/nav_question"

            />
    </fragment>
    <fragment
        android:id="@+id/nav_question"
        android:name="com.quiz.ui.fragments.QuestionFragment"
        android:label="Question"
        tools:layout="@layout/fragment_question" />

    <fragment
        android:id="@+id/nav_courses"
        android:name="com.quiz.ui.fragments.VideoListFragment"
        android:label="Cours"
        tools:layout="@layout/fragment_video_list">

        <action
            android:id="@+id/courses_to_play"
            app:destination="@id/nav_video_play"
            />
    </fragment>

    <fragment
        android:id="@+id/nav_video_play"
        android:name="com.quiz.ui.fragments.VideoPlayFragment"
        android:label="Play"
        tools:layout="@layout/fragment_video_play" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.quiz.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.quiz.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
</navigation>